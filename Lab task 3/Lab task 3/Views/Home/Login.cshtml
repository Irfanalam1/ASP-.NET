@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<h2>
    @*@ViewBag.Uname
        @ViewBag.Pass*@
    @if (Model != null)
    {@Model.Username
    @Model.Id
        @Model.Gender
        @Model.Profession
        @Model.Hobbies
}
</h2>
<h2>Login</h2>
<br />
<form action="" method="post">
    Name:<input type="text" class="form-control" name="Username" placeholder="Name" />
    <br />
    Id:<input type="number" class="form-control" name="Id" placeholder="Id" />
    <br />
    Gender    <input type="radio" name="Gender" value="Male" />Male
    <input type="radio" name="Gender" value="Female" />Female
    <br />
    <br />
    Profession   <select name="Profession" id="profession">
        <option value="Select">Select</option>
        <option value="Teacher">Teacher</option>
        <option value="Student">Student</option>
    </select>
    <br />
    <br />
    Hobbies   <input type="checkbox" name="Hobbies" value="Playing" />Playing
    <input type="checkbox" name="Hobbies" value="Reading" />Reading
    <input type="checkbox" name="Hobbies" value="Gardening" />Gardening

    <br />
    
    <input type="submit" value="Login" class="btn btn-danger" />
</form>